/* pages/recipe/list.wxss */
page {
  --primary-color: #34C759; /* ËãπÊûúÂÅ•Â∫∑ÁªøËâ≤ */
  --primary-light: #E9F7EF;
  --primary-dark: #28A745;
  --text-primary: #000000;
  --text-secondary: #666666;
  --text-hint: #8E8E93; /* ËãπÊûúÁÅ∞Ëâ≤ */
  --background-color: #F2F2F7; /* ËãπÊûúÊµÖÁÅ∞ËÉåÊôØËâ≤ */
  --card-background: #FFFFFF;
  --border-radius: 16rpx;
  --shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  
  height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'SF Pro Display', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  color: var(--text-primary);
  background-color: var(--background-color);
  font-size: 28rpx;
  line-height: 1.5;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
}

/* È°∂ÈÉ®Áä∂ÊÄÅÊ†è */
.status-bar {
  height: 44px;
  width: 100%;
  background-color: var(--card-background);
}

/* È°∂ÈÉ®ÂØºËà™Ê†è */
.nav-bar {
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  background-color: var(--card-background);
  color: var(--text-primary);
  border-bottom: 0.5rpx solid rgba(0, 0, 0, 0.1);
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  font-size: 40rpx;
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
}

.nav-actions {
  display: flex;
  align-items: center;
}

.api-toggle {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  background-color: rgba(142, 142, 147, 0.12);
  border-radius: 12rpx;
  margin-right: 16rpx;
  color: var(--text-hint);
  transition: background-color 0.2s, color 0.2s;
}

.api-toggle.active {
  background-color: var(--primary-color);
  color: white;
}

.search-icon {
  font-size: 40rpx;
}

/* ÊêúÁ¥¢Ê†è */
.search-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: var(--card-background);
  border-bottom: 0.5rpx solid rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  height: 70rpx;
  background-color: rgba(142, 142, 147, 0.12); /* ËãπÊûúÊêúÁ¥¢Ê°ÜËÉåÊôØËâ≤ */
  border-radius: 10rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.search-cancel {
  margin-left: 20rpx;
  color: var(--primary-color);
  font-size: 28rpx;
}

/* ÂàÜÁ±ªÁ≠õÈÄâ */
.filter-bar {
  padding: 16rpx 0;
  background-color: var(--card-background);
  border-bottom: 0.5rpx solid rgba(0, 0, 0, 0.1);
}

.filter-scroll {
  white-space: nowrap;
  width: 100%;
}

.filter-tags {
  display: inline-flex;
  padding: 0 20rpx;
}

.filter-tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  margin-right: 16rpx;
  border-radius: 16rpx;
  background-color: rgba(142, 142, 147, 0.12);
  font-size: 26rpx;
  color: var(--text-secondary);
  transition: background-color 0.2s, color 0.2s;
}

.filter-tag.active {
  background-color: var(--primary-color);
  color: white;
}

/* ÂÜÖÂÆπÂå∫Âüü */
.scrollarea {
  flex: 1;
  overflow: auto;
  background-color: var(--background-color);
}

/* È£üË∞±ÂàóË°® */
.recipe-list {
  padding: 20rpx;
}

.data-source-tip {
  background-color: rgba(52, 199, 89, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.data-source-tip text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.update-time {
  margin-top: 6rpx;
  font-size: 22rpx !important;
  color: var(--text-hint) !important;
}

.recipe-count {
  margin-top: 6rpx;
  font-size: 22rpx !important;
  color: var(--primary-color) !important;
  font-weight: 500 !important;
}

/* APIÂà∑Êñ∞ÊåâÈíÆÊ†∑Âºè */
.api-refresh-container {
  display: flex;
  justify-content: center;
  margin: 16rpx 0 24rpx;
}

.api-refresh-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--primary-light);
  color: var(--primary-color);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(52, 199, 89, 0.2);
  transition: all 0.3s ease;
}

.api-refresh-button:active {
  transform: scale(0.95);
  background-color: var(--primary-color);
  color: white;
}

.api-refresh-button.loading {
  background-color: #f0f0f0;
  color: var(--text-hint);
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { opacity: 0.7; }
  50% { opacity: 1; }
  100% { opacity: 0.7; }
}

.api-refresh-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.api-refresh-text {
  font-size: 26rpx;
}

.api-source {
  color: var(--primary-color);
  font-weight: 600;
}

.local-source {
  color: var(--text-hint);
  font-weight: 600;
}

.recipe-card {
  margin-bottom: 24rpx;
  background-color: var(--card-background);
  border-radius: var(--border-radius);
  overflow: hidden;
  box-shadow: var(--shadow);
  transition: transform 0.2s;
  padding: 20rpx;
}

.recipe-card:active {
  transform: scale(0.98);
}

.recipe-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  padding-bottom: 12rpx;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  flex: 1;
}

.favorite-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(242, 242, 247, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.favorite-icon.active {
  color: #FF3B30; /* ËãπÊûúÁ∫¢Ëâ≤ */
}

.recipe-info {
  padding: 8rpx 0;
}

.recipe-meta {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 12rpx;
  color: var(--text-hint);
  font-size: 24rpx;
}

.recipe-time {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.recipe-time:before {
  content: '‚è±Ô∏è';
  margin-right: 4rpx;
  font-size: 22rpx;
}

.recipe-calories {
  margin-right: 20rpx;
}

.recipe-calories:before {
  content: 'üî•';
  margin-right: 4rpx;
  font-size: 22rpx;
}

.recipe-tag {
  background-color: var(--primary-light);
  color: var(--primary-color);
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-weight: 500;
}

.recipe-ingredients {
  margin-top: 8rpx;
  font-size: 24rpx;
  display: flex;
  flex-wrap: wrap;
}

.ingredients-label {
  color: var(--text-hint);
  margin-right: 6rpx;
}

.ingredients-text {
  color: var(--text-secondary);
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recipe-benefits {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: 500;
}

/* Âä†ËΩΩÁä∂ÊÄÅ */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background-color: transparent;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid rgba(142, 142, 147, 0.2);
  border-top: 3rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-hint);
}

/* Âä†ËΩΩÊõ¥Â§ö */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
}

.loading-spinner-small {
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid rgba(142, 142, 147, 0.2);
  border-top: 2rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: 10rpx;
}

.loading-text-small {
  font-size: 24rpx;
  color: var(--text-hint);
}

/* ÈîôËØØÁä∂ÊÄÅ */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
  background-color: var(--card-background);
  margin: 20rpx;
  border-radius: var(--border-radius);
  box-shadow: var(--shadow);
}

.error-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 30rpx;
  text-align: center;
  line-height: 1.5;
}

.error-actions {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  gap: 20rpx;
}

.error-action-btn {
  font-size: 26rpx;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  background-color: #f0f0f0;
  color: var(--text-secondary);
  border: none;
  min-width: 200rpx;
  text-align: center;
}

.error-action-btn.primary {
  background-color: var(--primary-color);
  color: white;
}

/* Ê≤°ÊúâÈ£üË∞±Êó∂ÁöÑÊ†∑Âºè */
.no-recipes {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background-color: var(--card-background);
  margin: 20rpx;
  border-radius: var(--border-radius);
  box-shadow: var(--shadow);
}

.no-recipes-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.no-recipes-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 30rpx;
  text-align: center;
}

.no-recipes-actions {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  gap: 20rpx;
}

.no-recipes-action-btn {
  font-size: 26rpx;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  background-color: #f0f0f0;
  color: var(--text-secondary);
  border: none;
  min-width: 200rpx;
  text-align: center;
}

.no-recipes-action-btn.primary {
  background-color: var(--primary-color);
  color: white;
}

/* ÊÇ¨ÊµÆÊåâÈíÆ */
.floating-button {
  position: fixed;
  right: 30rpx;
  bottom: 50rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
  transition: transform 0.2s, box-shadow 0.2s;
}

.floating-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.floating-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.floating-text {
  font-size: 20rpx;
}

/* Êìç‰ΩúÊ†èÊ†∑Âºè */
.action-bar {
  padding: 16rpx 30rpx;
  background-color: var(--card-background);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.last-updated {
  font-size: 24rpx;
  color: var(--text-hint);
  margin-bottom: 12rpx;
}

.action-buttons {
  display: flex;
  width: 100%;
  justify-content: center;
  margin-bottom: 10rpx;
}

.btn-refresh-api {
  font-size: 28rpx;
  padding: 14rpx 20rpx;
  border-radius: 30rpx;
  border: none;
  margin: 0 10rpx;
  width: 80%;
  background-color: var(--primary-color);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(52, 199, 89, 0.2);
  transition: all 0.3s ease;
}

.btn-refresh-api:active {
  transform: scale(0.98);
  background-color: var(--primary-dark);
} 