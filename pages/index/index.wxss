/* 烟花特效样式 */
.fireworks-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 9999;
}

.firework {
  position: fixed;
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  animation: firework-explode 1.5s ease-out forwards;
  z-index: 9999;
}

.firework::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  transform: scale(1);
  animation: firework-particle 1.5s ease-out forwards;
  background: radial-gradient(circle at center,
    rgba(255, 255, 255, 1) 0%,
    rgba(255, 220, 100, 0.8) 10%,
    rgba(255, 180, 50, 0.6) 20%,
    rgba(255, 120, 30, 0.4) 40%,
    transparent 100%
  );
  box-shadow:
    0 0 10rpx #fff,
    0 0 20rpx #fff,
    0 0 30rpx #ff0,
    0 0 40rpx #ff8000,
    0 0 50rpx #ff4000;
  filter: blur(1rpx);
}

.firework::after {
  content: '';
  position: absolute;
  width: 200%;
  height: 200%;
  top: -50%;
  left: -50%;
  border-radius: 50%;
  transform: scale(0.1);
  animation: firework-trail 1.5s ease-out forwards;
  background: radial-gradient(circle at center,
    rgba(255, 255, 255, 0.8) 0%,
    rgba(255, 220, 100, 0.6) 20%,
    rgba(255, 180, 50, 0.4) 40%,
    rgba(255, 120, 30, 0.2) 60%,
    transparent 100%
  );
}

@keyframes firework-explode {
  0% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
  20% {
    transform: scale(15) rotate(180deg);
    opacity: 0.9;
  }
  40% {
    transform: scale(30) rotate(360deg);
    opacity: 0.8;
  }
  60% {
    transform: scale(45) rotate(540deg);
    opacity: 0.6;
  }
  80% {
    transform: scale(50) rotate(720deg);
    opacity: 0.3;
  }
  100% {
    transform: scale(60) rotate(900deg);
    opacity: 0;
  }
}

@keyframes firework-particle {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(0.8);
    opacity: 0.8;
  }
  100% {
    transform: scale(0.1);
    opacity: 0;
  }
}

@keyframes firework-trail {
  0% {
    transform: scale(0.1) rotate(0deg);
    opacity: 1;
  }
  50% {
    transform: scale(1) rotate(180deg);
    opacity: 0.5;
  }
  100% {
    transform: scale(2) rotate(360deg);
    opacity: 0;
  }
}

