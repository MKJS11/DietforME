/* pages/record/record.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f0f2f5;
  padding: 30rpx 0;
}

.header {
  margin: 0 30rpx 30rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  position: relative;
  padding: 40rpx 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.back-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 25rpx;
  margin-right: 20rpx;
  transition: all 0.3s;
}

.back-button:active {
  transform: scale(0.95);
  background-color: #f0f0f0;
}

.back-icon {
  font-size: 44rpx;
  color: #333333;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  text-align: center;
  margin-right: 80rpx; /* 为了视觉平衡，与返回按钮对应 */
}

.description {
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  background-color: #ffffff;
  text-align: center;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.description text {
  font-size: 32rpx;
  color: #666666;
  line-height: 1.5;
  background: linear-gradient(to right, #4cd964, #5ac8fa);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: 500;
}

.content {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

/* 相机样式 */
.camera-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.camera {
  width: 690rpx;
  height: 690rpx;
  border-radius: 35rpx;
  overflow: hidden;
  position: relative;
  margin: 20rpx 0 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.camera-frame {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 500rpx;
  height: 500rpx;
  border: 4rpx dashed rgba(255, 255, 255, 0.8);
  border-radius: 25rpx;
  z-index: 10;
}

.camera-hint {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  z-index: 10;
}

.camera-hint text {
  background-color: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 26rpx;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(10px);
}

.controls {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

.take-photo-btn {
  width: 450rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(135deg, #4cd964, #5ac8fa);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 30rpx rgba(76, 217, 100, 0.3);
  transition: all 0.3s;
}

.take-photo-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(76, 217, 100, 0.2);
}

.take-photo-btn[disabled] {
  background: #e0e0e0;
  color: #ffffff;
  box-shadow: none;
}

/* 预览和结果区域样式 */
.result-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.preview-container {
  width: 690rpx;
  height: 520rpx;
  background-color: #ffffff;
  border-radius: 35rpx;
  overflow: hidden;
  margin: 30rpx 0;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.recognition-result {
  width: 690rpx;
  background-color: #ffffff;
  border-radius: 35rpx;
  padding: 40rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.result-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #666666;
  font-weight: 500;
}

.value {
  font-size: 34rpx;
  color: #333333;
  font-weight: bold;
  background: linear-gradient(to right, #4cd964, #5ac8fa);
  -webkit-background-clip: text;
  color: transparent;
}

.result-controls {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.result-btn {
  width: 320rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  border-radius: 50rpx;
  transition: all 0.3s;
}

.result-btn:active {
  transform: scale(0.98);
}

.retake {
  background-color: #f8f9fa;
  color: #666666;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.save {
  background: linear-gradient(135deg, #4cd964, #5ac8fa);
  color: #ffffff;
  font-weight: bold;
  box-shadow: 0 8rpx 30rpx rgba(76, 217, 100, 0.3);
}

.save[disabled] {
  background: #e0e0e0;
  box-shadow: none;
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.result-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.value.high {
  color: #ff4d4f;
}

.value.middle {
  color: #faad14;
}

.value.low {
  color: #52c41a;
}

.suggestion {
  margin-top: 30rpx;
}

.suggestion-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-top: 10rpx;
  display: block;
}

.modal-footer {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
  align-items: center;
}

.btn-cancel, .btn-confirm {
  width: 45%;
  height: 80rpx;
  line-height: normal;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #4CAF50;
  color: #fff;
}

/* 添加禁用状态样式 */
.btn-cancel[disabled], .btn-confirm[disabled] {
  opacity: 0.6;
  color: rgba(255, 255, 255, 0.8);
  display: flex; /* 确保禁用状态也使用flex布局 */
  align-items: center;
  justify-content: center;
}

.btn-cancel[disabled] {
  background: #e8e8e8;
  color: #999;
}

.btn-confirm[disabled] {
  background: #8BC34A;
} 