.empty-cart-doodles {
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.doodle {
  position: absolute;
  font-size: 40rpx;
  opacity: 0.2;
  animation: float 10s infinite ease-in-out;
}

.doodle-1 {
  top: 20%;
  left: 15%;
  animation-delay: 0s;
  transform: rotate(-15deg);
}

.doodle-2 {
  top: 30%;
  right: 20%;
  animation-delay: 2s;
  transform: rotate(10deg);
}

.doodle-3 {
  bottom: 25%;
  left: 25%;
  animation-delay: 1s;
  transform: rotate(-5deg);
}

.doodle-4 {
  bottom: 30%;
  right: 25%;
  animation-delay: 3s;
  transform: rotate(8deg);
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(var(--rotation, 0deg));
  }
  50% {
    transform: translateY(-15rpx) rotate(var(--rotation, 0deg));
  }
}

