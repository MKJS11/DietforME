.tab-bar {
  position: fixed !important;
  bottom: 38rpx !important;
  left: 50% !important;
  transform: translateX(-50%) !important;
  width: 90% !important;
  height: 120rpx !important;
  backdrop-filter: blur(20px) !important;
  -webkit-backdrop-filter: blur(20px) !important;
  background-color: rgba(255, 255, 255, 0.85) !important;
  display: flex !important;
  box-shadow: 0 8rpx 32rpx rgba(30, 58, 50, 0.15) !important;
  z-index: 100 !important;
  border-radius: var(--border-radius, 30rpx) !important;
  border: 1px solid rgba(255, 255, 255, 0.5) !important;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'SF Pro Display', 'Helvetica Neue', Helvetica, Arial, sans-serif !important;
}

.tab-item {
  flex: 1 !important;
  display: flex !important;
  flex-direction: column !important;
  justify-content: center !important;
  align-items: center !important;
  padding: 12rpx 0 !important;
  transition: all 0.25s ease !important;
  position: relative !important;
  cursor: pointer !important;
}

/* å¢å¼ºç‚¹å‡»æ•ˆæœ */
.tab-item:active {
  opacity: 0.7 !important;
  transform: scale(0.95) !important;
}

