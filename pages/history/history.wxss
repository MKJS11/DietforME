.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}

.back-btn {
  position: fixed;
  top: 80rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.content-wrapper {
  padding-top: 100rpx;
  width: 100%;
}

.date-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.date-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.arrow {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 50%;
}

.current-date {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.total-calories {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.calories-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.history-list {
  height: calc(100vh - 350rpx);
  margin-top: 30rpx;
}

.record-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  transition: all 0.3s ease;
}

.record-item:active {
  transform: scale(0.98);
}

.record-header {
  display: flex;
  align-items: center;
  width: 100%;
}

.food-image-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: #f5f5f5;
}

.food-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.food-basic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}

.food-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.food-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.food-calories {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
  align-self: flex-start;
}

.unit {
  font-size: 24rpx;
  font-weight: normal;
  color: #999;
  margin-left: 4rpx;
}

.food-detail-expanded {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.nutrition-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.tag {
  font-size: 22rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
}

.food-suggestion {
  padding: 16rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 500rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}
